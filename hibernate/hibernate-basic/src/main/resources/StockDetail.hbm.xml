<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.antt.hibernate.oneone.StockDetail" table="STOCK_DETAIL">
        <id name="stockId" type="java.lang.Integer">
            <column name="STOCK_ID"/>
            <generator class="foreign">
                <param name="property">stock</param>
            </generator>
        </id>
        <property name="compName" type="string">
            <column name="COMP_NAME" length="100" not-null="true"/>
        </property>
        <property name="compDesc" type="string">
            <column name="COMP_DESC" not-null="true"/>
        </property>
        <property name="remark" type="string">
            <column name="REMARK"/>
        </property>
        <property name="listDate" type="date">
            <column name="LIST_DATE" length="10" not-null="true"/>
        </property>
        <one-to-one name="stock" class="com.antt.hibernate.oneone.Stock" constrained="true"/>
    </class>
</hibernate-mapping>